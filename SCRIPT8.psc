Algoritmo SCRIPT8
    Escribir "Ingresa la base imponible: "
    Leer bImponible
    Escribir "Porcentaje de IVA: "
    Leer IVA
    importe = (bImponible * IVA) / 100
    total = bImponible + IVA
    Escribir "El importe de IVA es: ", importe
    Escribir "El total a pagar es: ", total
	
FinAlgoritmo

